form(action="/todoAdd", skip-confirmation="true", method="post")
    section(name="description" required="true")
        header DESCRIPTION
        p Provide a description for the task
        input(type="text")
        footer Reply with description or BACK
    section(name="dueDate" required="true")
        header DUE DATE
        p Provide a due date
        input(type="date")
        footer Reply with due date
